<!DOCTYPE html>
<html>

<head>
  <title>Ticket Viewer</title>
  <link rel='stylesheet' href='/css/style.css' />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
    integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
  </script>
</head>

<body>
  <%
        var strTags = "";
        for(var i=0; i < ticket.tags.length; i++)
            strTags += "#" + ticket.tags[i] + " "
    %>
  <div class="container">
    <div class="container-fluid">
      <div class="offset-md-2 col-md-8">
        <div class="row infoBox">
          <button class="button btn-primary navigation-button" id="btnBack"> Back </button>
        </div>
        <div class="card card-body">
          <div class="row infoBox subjectName">
            <div class="col-md-2 subjectName"> Ticket Id: </div>
            <div class="col-md-10"> <%= ticket.id %> </div>
          </div>
          <div class="row infoBox subjectName">
            <div class="col-md-2 subjectName"> Subject: </div>
            <div class="col-md-10"> <%= ticket.subject %> </div>
          </div>
          <div class="row infoBox">
            <div class="col-md-2 subjectName"> Description: </div>
            <div class="col-md-10"> <%= ticket.description %> </div>
          </div>
          <div class="row infoBox">
            <div class="col-md-2 subjectName"> Status: </div>
            <div class="col-md-10"> <%= ticket.status %> </div>
          </div>
          <div class="row infoBox">
            <div class="col-md-2 subjectName"> Created At: </div>
            <div class="col-md-10"> <%= ticket.created_at %> </div>
          </div>
          <div class="row infoBox">
            <div class="col-md-2 subjectName"> Tags: </div>
            <div class="col-md-10"> <%= strTags %> </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
  </div>
  <script>
    $("#btnBack").click(function (event) {
      $("#btnBack").html("<i class='fa fa-circle-o-notch fa-spin'></i> Back");
      window.history.go(-1);
      return false;
    });
  </script>
</body>
</html>